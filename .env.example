# NEXO CRM System - Environment Variables
# =========================================
# Copy this file to .env.local for development

# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_DB=nexo
POSTGRES_USER=nexo_user
POSTGRES_PASSWORD=nexo_password
POSTGRES_PORT=5432
POSTGRES_HOST=localhost
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=nexo_redis_password

# ======================
# RABBITMQ CONFIGURATION
# ======================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=nexo_user
RABBITMQ_PASSWORD=nexo_password
RABBITMQ_MANAGEMENT_PORT=15672

# ======================
# SERVICE PORTS
# ======================
FRONTEND_PORT=3000
AUTH_SERVICE_PORT=3001
API_GATEWAY_PORT=3002
CRM_SERVICE_PORT=3003
STOCK_SERVICE_PORT=3004
SALES_SERVICE_PORT=3005

# ======================
# SERVICE URLS (Internal)
# ======================
AUTH_SERVICE_URL=http://localhost:3001
CRM_SERVICE_URL=http://localhost:3003
STOCK_SERVICE_URL=http://localhost:3004
SALES_SERVICE_URL=http://localhost:3005

# ======================
# JWT CONFIGURATION
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# APPLICATION
# ======================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=NEXO CRM
NEXT_PUBLIC_APP_VERSION=1.0.0

# ======================
# API CONFIGURATION (Frontend)
# ======================
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_API_TIMEOUT=30000

# ======================
# AUTHENTICATION (Frontend)
# ======================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-in-production

# ======================
# FEATURE FLAGS
# ======================
NEXT_PUBLIC_ENABLE_PDF_VIEWER=true
NEXT_PUBLIC_ENABLE_CHARTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ======================
# PORTAL CONFIGURATION
# ======================
NEXT_PUBLIC_ENABLE_EMPLOYEE_PORTAL=true
NEXT_PUBLIC_ENABLE_CLIENT_PORTAL=true
NEXT_PUBLIC_ENABLE_SUPPLIER_PORTAL=true
NEXT_PUBLIC_ENABLE_PROFESSIONAL_PORTAL=true

# ======================
# STORAGE & ATTACHMENTS
# ======================
# File Upload Configuration (CRM Service)
UPLOAD_DIR=./uploads                    # Directory for file storage
MAX_FILE_SIZE=10485760                  # Maximum file size in bytes (10MB default)
                                        # Examples: 5MB=5242880, 20MB=20971520, 50MB=52428800

# Frontend File Upload (Client-side validation)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# ======================
# UI CONFIGURATION
# ======================
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_PRIMARY_COLOR=#667eea
NEXT_PUBLIC_SECONDARY_COLOR=#764ba2
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# ======================
# DEVELOPMENT
# ======================
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_DEBUG=false

