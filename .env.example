# NEXO Frontend - Environment Variables
# ======================================
# Copy this file to .env.local and update with your values

# ======================
# APPLICATION
# ======================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=NEXO CRM
NEXT_PUBLIC_APP_VERSION=1.0.0

# ======================
# API CONFIGURATION
# ======================
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000
# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# ======================
# AUTHENTICATION
# ======================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:4200
NEXTAUTH_SECRET=your-secret-key-change-this-in-production

# Auth providers (if using OAuth)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# ======================
# FEATURE FLAGS
# ======================
NEXT_PUBLIC_ENABLE_PDF_VIEWER=true
NEXT_PUBLIC_ENABLE_CHARTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ======================
# PORTAL CONFIGURATION
# ======================
# Enable/disable specific portals
NEXT_PUBLIC_ENABLE_EMPLOYEE_PORTAL=true
NEXT_PUBLIC_ENABLE_CLIENT_PORTAL=true
NEXT_PUBLIC_ENABLE_SUPPLIER_PORTAL=true
NEXT_PUBLIC_ENABLE_PROFESSIONAL_PORTAL=true

# ======================
# ANALYTICS & MONITORING
# ======================
# Google Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (optional)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=development

# ======================
# STORAGE
# ======================
# File upload configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# ======================
# UI CONFIGURATION
# ======================
# Theme
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_PRIMARY_COLOR=#667eea
NEXT_PUBLIC_SECONDARY_COLOR=#764ba2

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# ======================
# DEVELOPMENT
# ======================
# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# ======================
# PRODUCTION
# ======================
# CDN URL (if using CDN in production)
# NEXT_PUBLIC_CDN_URL=https://cdn.example.com

# Asset prefix (if deploying to subdirectory)
# NEXT_PUBLIC_ASSET_PREFIX=/nexo
