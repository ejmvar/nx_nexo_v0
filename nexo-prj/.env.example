# NEXO CRM System - Environment Configuration Example
# =================================================
# Copy this file to .env and update with your actual values

# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://nexo_app:nexo_app_password@localhost:5432/nexo_crm?schema=public
DATABASE_URL_SUPERUSER=postgresql://nexo_user:nexo_password@localhost:5432/nexo_crm?schema=public

POSTGRES_DB=nexo_crm
POSTGRES_USER=nexo_user
POSTGRES_PASSWORD=nexo_password
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexo_crm
DB_USER=nexo_user
DB_PASSWORD=nexo_password

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=nexo_redis_password

# ======================
# RABBITMQ CONFIGURATION
# ======================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=nexo_user
RABBITMQ_PASSWORD=nexo_password
RABBITMQ_MANAGEMENT_PORT=15672

# ======================
# JWT CONFIGURATION
# ======================
JWT_SECRET=local-dev-secret-key-do-not-use-in-production-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# APPLICATION
# ======================
NODE_ENV=development

# ======================
# FILE STORAGE
# ======================
# Storage backend type: local, s3, minio, azure, gcp, rustfs, cloudflare, backblaze, custom
FILE_STORAGE_TYPE=local

# Storage service identifier
FILE_STORAGE_NAME=nexo-local-storage

# Base path for local storage (relative to project root)
FILE_STORAGE_BASE_PATH=./media

# Service-specific ID (e.g., bucket name for S3, container for Azure, node ID for RustFS)
FILE_STORAGE_ID=

# Additional service description (JSON string with endpoints, regions, etc.)
FILE_STORAGE_DESC=

# For future S3/MinIO configuration:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# For future Azure configuration:
# AZURE_STORAGE_ACCOUNT=
# AZURE_STORAGE_KEY=
# AZURE_STORAGE_CONTAINER=

# For future RustFS configuration:
# RUSTFS_ENDPOINT=http://localhost:8080
# RUSTFS_NODE_ID=node-1
# RUSTFS_AUTH_TOKEN=
