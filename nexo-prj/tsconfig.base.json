{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@nexo-prj/source"],
    "paths": {
      "@nexo-prj/shared-ui": ["dist/libs/shared-ui/src/index.d.ts"],
      "@nexo-prj/shared-ui/*": ["dist/libs/shared-ui/src/*"],
      "@nexo-prj/shared/logger": ["libs/shared/logger/src/index.ts"],
      "@nexo-prj/shared/health": ["libs/shared/health/src/index.ts"],
      "@nexo-prj/shared/metrics": ["libs/shared/metrics/src/index.ts"]
    }
  }
}
