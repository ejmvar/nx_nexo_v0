{
  "name": "crm-service",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/crm-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/crm-service",
        "main": "apps/crm-service/src/main.ts",
        "tsConfig": "apps/crm-service/tsconfig.json"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "crm-service:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "crm-service:build:development"
        },
        "production": {
          "buildTarget": "crm-service:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/crm-service/jest.config.ts"
      }
    }
  },
  "tags": []
}